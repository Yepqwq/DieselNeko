{
  "name": "reggol",
  "description": "Logger for professionals",
  "version": "1.6.3",
  "sideEffects": false,
  "main": "lib/node.js",
  "types": "index.d.ts",
  "exports": {
    ".": {
      "node": "./lib/node.js",
      "browser": "./lib/browser.mjs",
      "types": "./index.d.ts"
    },
    "./shared": {
      "require": "./lib/shared.js",
      "import": "./lib/shared.mjs"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "lib",
    "src",
    "index.d.ts"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shigma/reggol.git"
  },
  "bugs": {
    "url": "https://github.com/shigma/reggol/issues"
  },
  "homepage": "https://github.com/shigma/reggol",
  "author": "Shigma <shigma10826@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build:node": "esbuild src/node.ts --outfile=lib/node.cjs --bundle --sourcemap --sources-content=false --platform=node --external:cosmokit --external:supports-color --target=es2019",
    "build:browser": "esbuild src/browser.ts --outfile=lib/browser.mjs --bundle --sourcemap --sources-content=false --platform=browser --external:cosmokit --external:supports-color --target=esnext",
    "build": "yarn build:node && yarn build:browser && yarn tsc -b",
    "test": "mocha -r esbuild-register tests/*.spec.ts",
    "test:text": "shx rm -rf coverage && c8 -r text yarn test",
    "test:json": "shx rm -rf coverage && c8 -r json yarn test",
    "test:html": "shx rm -rf coverage && c8 -r html yarn test"
  },
  "devDependencies": {
    "@sinonjs/fake-timers": "^6.0.1",
    "@types/chai": "^4.3.5",
    "@types/mocha": "^9.1.1",
    "@types/node": "^20.4.2",
    "@types/object-inspect": "^1.8.1",
    "@types/supports-color": "^8.1.1",
    "@types/sinonjs__fake-timers": "^6.0.4",
    "c8": "^7.14.0",
    "chai": "^4.3.7",
    "esbuild": "^0.18.14",
    "esbuild-register": "^3.4.2",
    "mocha": "^9.2.2",
    "shx": "^0.3.4",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "supports-color": "^8.1.1",
    "cosmokit": "^1.5.1",
    "object-inspect": "^1.12.3"
  }
}
